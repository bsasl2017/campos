<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		
		<!--TODO-->
		<!--Add checkboxes-->
		<!--Send data to backend-->
		<!--Add form to website-->
	
		<template id="partner_signup">
			<t t-call="website.layout">
				<t t-set="additional_title">Partner Signup</t>
				<div id="wrap">
					<div class="oe_structure" />
					<div class="container">
						<h1 class="text-center">
							Partner Signup Form
						</h1>

						<div class="row">
							<section id="forms">
								<form class="form-horizontal mt32" action="/campos/jobber/thankyou"
									method="post" enctype="multipart/form-data">
									<t t-if="error">
										<div class="alert alert-danger">
			  								<a href="#" class="close" data-dismiss="alert" aria-label="close">&amp;times;</a>
			  								<ul t-foreach="error" t-as="e">
			  									<li t-esc="error.get(e)" />
			  								</ul>
										</div>
									</t>
									
									<div t-attf-class="form-group #{error.get('partnername') and 'has-error' or ''}">
										<label class="col-md-3 col-sm-4 control-label" for="name">Navn på firma/organisation</label>
										<div class="col-md-7 col-sm-8">
											<input type="text" t-att-value="default.get('partnername')"
												class="form-control" name="partnername" required="True" />
										</div>
									</div>
									<div t-attf-class="form-group #{error.get('contactname') and 'has-error' or ''}">
										<label class="col-md-3 col-sm-4 control-label" for="contactname">Dit navn</label>
										<div class="col-md-7 col-sm-8">
											<input type="text" t-att-value="default.get('contactname')"
												class="form-control" name="contactname" required="True" />
										</div>
									</div>
									
									<div t-attf-class="form-group #{error.get('contactemail') and 'has-error' or ''}">
										<label class="col-md-3 col-sm-4 control-label" for="contactemail">Din email</label>
										<div class="col-md-7 col-sm-8">
											<input type="email" t-att-value="default.get('contactemail')"
												class="form-control" name="contactemail" required="True" />
										</div>
									</div>
									<div t-attf-class="form-group #{error.get('contactphone') and 'has-error' or ''}">
										<label class="col-md-3 col-sm-4 control-label" for="contactphone">Dit telefonnummer</label>
										<div class="col-md-7 col-sm-8">
											<input type="text" t-att-value="default.get('contactphone')"
												class="form-control" name="contactphone" />
										</div>
									</div>
									<div t-attf-class="form-group #{error.get('street') and 'has-error' or ''}">
										<label class="col-md-3 col-sm-4 control-label" for="street">Adresse</label>
										<div class="col-md-7 col-sm-8">
											<input type="text" t-att-value="default.get('street')"
												class="form-control" name="street" required="True" />
										</div>
									</div>
									<div t-attf-class="form-group #{error.get('zip') and 'has-error' or ''}">
										<label class="col-md-3 col-sm-4 control-label" for="zip">Postnummer</label>
										<div class="col-md-7 col-sm-8">
											<input type="text" t-att-value="default.get('zip')"
												class="form-control" name="zip" required="True" />
										</div>
									</div>
									<div t-attf-class="form-group #{error.get('city') and 'has-error' or ''}">
										<label class="col-md-3 col-sm-4 control-label" for="city">Bynavn</label>
										<div class="col-md-7 col-sm-8">
											<input type="text" t-att-value="default.get('city')"
												class="form-control" name="city" required="True" />
										</div>
									</div>
									<div t-attf-class="form-group #{error.get('website') and 'has-error' or ''}">
										<label class="col-md-3 col-sm-4 control-label" for="website">Hjemmeside</label>
										<div class="col-md-7 col-sm-8">
											<input type="text" t-att-value="default.get('website')"
												class="form-control" name="website" required="True" />
										</div>
									</div>
									
									<div class="form-group"> <label class="col-md-3 col-sm-4 control-label" 
										for="idea">Idé til aktivitet</label> <div class="col-md-7 col-sm-8"> 
										<textarea class="form-control" t-esc="default.get('idea')" name="idea" 
										style="min-height: 120px"/> </div> </div>
										
									<div class="form-group"> <label class="col-md-3 col-sm-4 control-label" 
										for="wishes">Ønsker fra partnerskab</label> <div class="col-md-7 col-sm-8"> 
										<textarea class="form-control" t-esc="default.get('wishes')" name="wishes" 
										style="min-height: 120px"/> </div> </div>
										
									<div class="form-group"> <label class="col-md-3 col-sm-4 control-label" 
										for="comments">Bemærkninger</label> <div class="col-md-7 col-sm-8"> 
										<textarea class="form-control" t-esc="default.get('comments')" name="comments" 
										style="min-height: 120px"/> </div> </div>
									
									
									<div class="form-group">
										<div class="col-md-offset-3 col-sm-offset-4 col-sm-8 col-md-7">
											<button type="submit" class="btn btn-primary">Indsend</button>
										</div>
									</div>
									
								</form>
							</section>
						</div>
					</div>
					<div class="oe_structure" />
				</div>
			</t>
		</template>

		<template id="partner_thankyou">
			<t t-call="website.layout">
				<div id="wrap">
					<div class="oe_structure">
						<div class="container">
							<h1>Tak for din interesse!</h1>
							<p>Din anmodning om partnerskab med Spejdernes Lejr 2017 er nu registreret. Vi vender tilbage til dig hurtigst muligt.</p>
						</div>
						<section data-snippet-id="cta" class="oe_dark">
							<div class="container">
								<div class="row">
									<div class="col-md-12 text-center mt16 mb16">
										<a href="/" class="btn btn-primary btn-lg">Fortsæt til vores hjemmeside</a>
									</div>
								</div>
							</div>
						</section>
					</div>
				</div>
			</t>
		</template>
		
		<template id="layout" inherit_id="website.layout">
			<xpath expr="//body" position="inside">
				<script>
					if ($('[type="date"]').prop('type') != 'date') {
	    				$('[type="date"]').datepicker({dateFormat: 'yy-mm-dd'});
					}
				</script>
			</xpath>
		
		</template>
	</data>
</openerp>