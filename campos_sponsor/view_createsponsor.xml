<?xml version="1.0"?>
<openerp>
	<data>

		<record id="view_form_sponsor_create" model="ir.ui.view">
			<field name="name">New Sponsor Form</field>
			<field name="model">model.sponsor</field>
			<field name="arch" type="xml">
				<form>
					<header>
						<button name="btn_next" type="object" string="Næste status" class="oe_highlight" />
						<button name="btn_prev" type="object" string="Forrige status" class="oe_highlight" />
						<button name="btn_luk" type="object" string="Sæt på holdt" class="oe_highlight" />
						<button name="btn_aaben" type="object" string="Genåben sponsorat" class="oe_highlight" />
						<field name="sponsor_state" widget="statusbar" statusbar_visible="state_potentiel,state_ansogning,state_bevilling,state_afvist"/>
					</header>
					<sheet>
						<h1>Potentiel sponsor/fond navn</h1>
						<field name="sponsor_name"/>
						<group>
							<group>
								<field name="sponsor_street"/>
								<field name="sponsor_city"/>
								<field name="sponsor_zip"/>
								<field name="sponsor_url"/>
							</group>
							<group>
								<field name="sponsor_kontaktperson"/>
								<field name="sponsor_kategori"/>
								<field name="sponsor_tema"/>
								<field name="sponsor_type"/>
								<field name="sponsor_type_begrund"/>
							</group>
						</group>
						<group>
							<group>
								<field name="sponsor_ansogt"/>
								<field name="sponsor_modydelse"/>
							</group>
							<group>
								<field name="sponsor_udfyldtaf"/>
								<field name="sponsor_kommentar"/>
							</group>
						</group>
						
						<group name="group_adminfields">
							<group>
								<field name="sponsor_bevilliget"/>
								<field name="sponsor_adminnote"/>
							</group>
							<group>
								<field name="sponsor_last"/>
								<field name="sponsor_last_begrund"/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		
		<record id="view_sponsor_overview" model="ir.ui.view">
			<field name="name">Sponsor Tree view</field>
			<field name="model">model.sponsor</field>
			<field name="arch" type="xml">
				<tree colors="gray:sponsor_last==True">
					<field name="sponsor_name"/>
					<field name="sponsor_kategori"/>
					<field name="sponsor_tema"/>
					<field name="sponsor_type"/>
					<field name="sponsor_kontaktperson"/>
					<field name="sponsor_ansogt"/>
					<field name="sponsor_bevilliget"/>
					<field name="sponsor_last"/>
				</tree>
			</field>
		</record>

		
		


		<!-- Action to open Sponsor list -->
		<act_window id="action_sponsor_create"
			name="SL2017 Sponsors oversigt"
			res_model="model.sponsor"
			view_mode="tree,form" />

		<!-- Menu item to open Sponsor list -->
		<menuitem id="menu_sponsor_create"
			name="SL2017 Sponsors"
			parent="mail.mail_feeds"
			sequence="20"
			action="action_sponsor_create" />

	</data>
</openerp>
